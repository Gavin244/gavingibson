<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startup.GetOTPActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".GetOTP"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color"
            android:text="Verify Communication Details"
            android:textSize="@dimen/text_size_large" />


        <ImageView
            android:id="@+id/mobile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="118dp"
            android:src="@drawable/mobile_phone_24dp" />

        <EditText
            android:id="@+id/mobile_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp"
            android:layout_toRightOf="@+id/mobile_icon"
            android:hint="Mobile OTP"
            android:inputType="number|textPassword"
            android:maxLength="6"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="168dp"
            android:src="@drawable/email_icon_24dp" />

        <EditText
            android:id="@+id/email_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="160dp"
            android:layout_toRightOf="@+id/email_icon"
            android:hint="E-Mail OTP "
            android:inputType="number|textPassword"
            android:maxLength="6"
            android:textSize="@dimen/text_size_medium" />

        <CheckBox
            android:id="@+id/terms_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="245dp" />

        <TextView
            android:id="@+id/terms_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="240dp"
            android:layout_toRightOf="@+id/terms_check"
            android:gravity="left"
            android:text=" I have read, understood, and I agree to the Terms and Conditions set forth by Sterling Select."
            android:textColor="@color/gen_black" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="110dp"
            android:background="@drawable/round_button_primary"
            android:text="Submit"
            style="?android:selectableItemBackground"
            android:fontFamily="sans-serif"
            android:textAllCaps="false"
            android:textColor="@color/gen_white" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/bottom_border" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>